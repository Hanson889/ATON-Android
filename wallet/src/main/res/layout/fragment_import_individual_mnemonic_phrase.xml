<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="@string/importMnemonicPhraseResume"
            android:textColor="@color/color_ffffff"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/et_mnemonic_phrase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_shape_edittext1"
            android:gravity="left|top"
            android:hint="@string/inputMnemonicPhraseTips"
            android:minHeight="130dp"
            android:padding="10dp"
            android:textColor="@color/color_ffffff"
            android:textColorHint="@color/color_7a8092"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_mnemonic_phrase_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Name can't be empty !"
            android:textColor="@color/color_ff4747"
            android:textSize="12sp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_shape_edittext1"
            android:hint="@string/nameOfWallet"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/color_ffffff"
            android:textColorHint="@color/color_7a8092"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_name_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Name can't be empty !"
            android:textColor="@color/color_ff4747"
            android:textSize="12sp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="12dp"
            android:background="@color/color_262d42"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <EditText
                android:id="@+id/et_password"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:digits="@string/inputDigits"
                android:hint="@string/setPassword"
                android:maxLength="32"
                android:textColor="@color/color_ffffff"
                android:textColorHint="@color/color_7a8092"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iv_eyes"
                android:layout_width="25dp"
                android:layout_height="27dp"
                android:src="@drawable/icon_close_eyes" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="1dp"
            android:background="@color/color_262d42"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <EditText
                android:id="@+id/et_repeat_password"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:digits="@string/inputDigits"
                android:hint="@string/repeatPassword"
                android:maxLength="32"
                android:textColor="@color/color_ffffff"
                android:textColorHint="@color/color_7a8092"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iv_repeat_eyes"
                android:layout_width="25dp"
                android:layout_height="27dp"
                android:src="@drawable/icon_close_eyes" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="1dp"
            android:background="@color/color_343a4d"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/tv_strength"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:text="@string/strength"
                android:textColor="@color/color_ffffff"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="@color/color_1f2841"
                android:orientation="horizontal">

                <View
                    android:id="@+id/v_line1"
                    android:layout_width="23dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="2dp"
                    android:background="@color/color_00000000" />

                <View
                    android:id="@+id/v_line2"
                    android:layout_width="23dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="2dp"
                    android:background="@color/color_00000000" />

                <View
                    android:id="@+id/v_line3"
                    android:layout_width="23dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="2dp"
                    android:background="@color/color_00000000" />

                <View
                    android:id="@+id/v_line4"
                    android:layout_width="23dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/color_00000000" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_password_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Name can't be empty !"
            android:textColor="@color/color_ff4747"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_password_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/passwordLimit"
            android:textColor="@color/color_ffffff"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_import"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@color/color_eff0f5"
            android:fontFamily="normal"
            android:gravity="center"
            android:text="@string/startImporting"
            android:textAllCaps="false"
            android:textColor="@color/color_1b2137"
            android:textSize="14sp" />
    </LinearLayout>

</ScrollView>