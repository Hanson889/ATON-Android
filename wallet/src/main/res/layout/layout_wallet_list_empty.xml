<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_empty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="66dp">

    <ImageView
        android:id="@+id/iv_no_wallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_no_wallet"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_no_wallet"
        style="@style/Text.fff.16"
        android:layout_marginTop="13dp"
        android:text="@string/msg_no_individual_wallet"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_no_wallet" />

    <com.juzix.wallet.component.widget.RoundedTextView
        android:id="@+id/rtv_create_wallet"
        style="@style/Text.1b2137.14"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="21dp"
        app:rtv_background_color="@color/color_eff0f5"
        android:text="@string/action_create_wallet"
        app:rtv_corner_radius="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_no_wallet" />

    <com.juzix.wallet.component.widget.RoundedTextView
        android:id="@+id/rtv_import_wallet"
        style="@style/Text.1b2137.14"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        app:rtv_background_color="@color/color_eff0f5"
        android:text="@string/action_import_wallet"
        app:rtv_corner_radius="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rtv_create_wallet" />

</android.support.constraint.ConstraintLayout>
